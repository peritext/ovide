{
  "name": "ovide",
  "version": "1.0.0-alpha.3",
  "description": "an experimental application for context-rich & polymorphic scholarly publishing",
  "author": "Robin de Mourat",
  "contributors": [
    "Mengying Du"
  ],
  "repository": "https://github.com/peritext/ovide",
  "homepage": "https://peritext.github.io/ovide",
  "bugs": {
    "url": "https://github.com/peritext/ovide/issues"
  },
  "license": "AGPL-3.0",
  "main": "main_process.js",
  "scripts": {
    "postinstall": "npm run build:html:bundles",
    "analyze": "webpack-bundle-analyzer docs/build/stats.json",
    "comb": "csscomb app/src",
    "build:web": "node updateAppVersion; webpack ./app/src/main.js -o docs/build/bundle.js --config ./webpack.web.prod.js --babel --progress;cp app/*.png docs/;cp app/loading.gif docs/loading.gif;cp -a app/resources docs/resources; node prepareWebProd;cp -a app/htmlBuilds docs/htmlBuilds;",
    "dev:electron": "NODE_ENV=development npm-run-all --parallel private:bundle private:serve",
    "dev:web": "webpack-dev-server --config ./webpack.web.dev.js ./app/src/main.js",
    "lint": "eslint app/src; eslint services",
    "lint:fix": "eslint app/src --fix; eslint services --fix",
    "pack": "npm run private:compile;run-s private:build:all",
    "pack:linux": "run-s private:clean private:compile private:build:linux",
    "pack:mac": "run-s private:clean private:compile private:build:mac",
    "pack:old": "run-s private:clean private:compile private:build:all",
    "pack:win": "run-s private:clean private:compile private:build:win",
    "build:html:bundles": "babel-node build-html-bundles",
    "private:add:docs": "git add docs",
    "private:build:all": "npm run private:build:icons;electron-builder -mwl",
    "private:build:icons": "./node_modules/.bin/electron-icon-maker --input=./assets/icon.png --output=./assets/;node flattenIcons",
    "private:build:linux": "electron-builder --linux",
    "private:build:mac": "electron-builder --mac",
    "private:build:win": "electron-builder --win",
    "private:bundle": "webpack --config ./webpack.electron.dev.js",
    "private:clean": "rimraf build",
    "private:compile": "node updateAppVersion;cross-env NODE_OPTIONS=--max_old_space_size=8192 webpack --config ./webpack.electron.prod.js",
    "private:serve": "electron .",
    "translations:backfill": "node translationScripts/backfillTranslations --locales ../app/src/translations/locales",
    "translations:discover": "node translationScripts/discoverTranslations --locales ../app/src/translations/locales --src ../app/src --namespacer translateNameSpacer --translatorFn translate",
    "translations:update": "npm run translations:backfill;npm run translations:discover;"
  },
  "precommit": [
    "lint",
    "build:html:bundles",
    "build:web",
    "private:add:docs"
  ],
  "build": {
    "productName": "ovide",
    "appId": "com.electron.ovide",
    "linux": {
      "target": "tar.gz",
      "synopsis": "A polymorphic scholarly rich content editor",
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "type": "development"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    }
  },
